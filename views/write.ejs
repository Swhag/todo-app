<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../styles/style.css" />
    <link rel="stylesheet" href="../styles/write.css" />

    <title>New Todo-App</title>
  </head>
  <body>
    <%- include('nav.html') %>

    <div class="write-container">
      <form class="write-form" action="/add" method="POST">
        <div class="task-input-field">
          <label for="task">Task</label>
          <input
            required
            type="text"
            placeholder=""
            name="taskName"
            id="task"
            autocomplete="off"
          />
        </div>

        <div class="task-input-field">
          <label for="due">Due Date</label>
          <input
            required
            type="date"
            placeholder=""
            name="taskDue"
            id="due"
            autocomplete="off"
          />
        </div>

        <button type="submit">Submit</button>
      </form>

      <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>

      <script>
        $(document).ready(function () {
          $('form.write-form').submit(function (e) {
            e.preventDefault();

            // get form data
            var formData = $(this).serialize();

            // submit form data with AJAX
            $.ajax({
              type: 'POST',
              url: '/add',
              data: formData,
              success: function (data) {
                alert('Data submitted');
                $('form.write-form')[0].reset(); // clear form
                window.location.href = '/write'; // redirect to /write page
              },
              error: function (error) {
                console.error(error);
              },
            });
          });
        });
      </script>
    </div>
  </body>
</html>
