<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles/style.css" />
    <link rel="stylesheet" href="./styles/list.css" />

    <title>New Todo-App</title>
  </head>
  <body>
    <%- include('nav.html') %>

    <div class="task-list-container">
      <ul class="task-list">
        <% for (var i = 0; i < posts.length; i ++) { %>
        <li class="task-list-item">
          <div>
            <h4>Todo List: <%= posts[i].taskName %></h4>
            <p>Task due: <%= posts[i].taskDue %></p>
          </div>

          <div>
            <button class="edit-btn" data-id="<%= posts[i]._id %>">Edit</button>
            <button class="delete-btn" data-id="<%= posts[i]._id %>">
              Delete
            </button>
          </div>
        </li>
        <% } %>
      </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>

    <script>
      $('.delete-btn').click(function (e) {
        e.preventDefault();

        if (confirm('Are you sure you want to delete this item?')) {
          let targetID = e.target.dataset.id;
          let target = e.target.parentElement.parentElement;

          $.ajax({
            method: 'DELETE',
            url: '/delete',
            data: { _id: targetID },
          })
            .done(function (res) {
              console.log('Entry deleted from the database');
              target.classList.add('fadeout');
            })
            .fail(function (a, b, c) {
              console.log(a, b, c);
            });
        }
      });
    </script>
  </body>
</html>
